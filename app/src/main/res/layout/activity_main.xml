<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/sendData"
            android:layout_width="226dp"
            android:layout_height="80dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:autofillHints=""
            android:inputType="text"
            android:text="@string/_2"
            android:textSize="14sp" />

        <Button
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minWidth="48dp"
            android:text="@string/send" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/enter_device_name"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/divName"
                android:layout_width="159dp"
                android:layout_height="75dp"
                android:layout_weight="3"
                android:autofillHints=""
                android:inputType="text"
                android:text="@string/hc_05"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/connectBut"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="3"
                android:text="@string/connect"
                android:textAlignment="center"
                android:textSize="16sp"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/CamButton"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="3"
                android:text="@string/cam_strm"
                android:textAlignment="center"
                android:textSize="16sp"
                style="?android:attr/buttonBarButtonStyle" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/heart_rate"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/hr"
                android:layout_width="160dp"
                android:layout_height="75dp"
                android:layout_weight="3"
                android:autofillHints=""
                android:inputType="number"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="SpeakableTextPresentCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/tempreature"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/temp"
                android:layout_width="160dp"
                android:layout_height="75dp"
                android:layout_weight="3"
                android:autofillHints=""
                android:inputType="text"
                android:textSize="20sp"
                tools:ignore="SpeakableTextPresentCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/ambient_temp"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/ambtemp"
                android:layout_width="160dp"
                android:layout_height="75dp"
                android:layout_weight="3"
                android:autofillHints=""
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="SpeakableTextPresentCheck" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/ecgBut"
                android:layout_width="182dp"
                android:layout_height="75dp"
                android:layout_weight="3"
                android:text="@string/ecg"
                android:textAlignment="center"
                android:textSize="20sp"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/tempBut"
                android:layout_width="172dp"
                android:layout_height="75dp"
                android:layout_weight="3"
                android:text="@string/temp"
                android:textAlignment="center"
                android:textSize="20sp"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/ppgBut"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="182dp"
                android:layout_height="75dp"
                android:layout_weight="3"
                android:text="@string/ppg"
                android:textAlignment="center"
                android:textSize="20sp" />

        </TableRow>

    </TableLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="10dp">

        <TextView
            android:id="@+id/recieveData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>